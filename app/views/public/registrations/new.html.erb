<div class="container">
  <h2 class="mt-5 text-center">新規登録</h2>

  <%= form_with model: @user, url: user_registration_path do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="form-horaizontal">
      <div class="form-group row offset-md-3">
        <label for="inputName3" class="col-sm-4 col-form-label"><%= f.label :name, "名前" %></label>
        <div class="col-sm-8">
          <%= f.text_field :name, placeholder: "名前" %>
        </div>
      </div>
      <div class="form-group row offset-md-3">
        <label for="input Email3" class="col-sm-4 col-form-label"><%= f.label :email,"メールアドレス" %></label>
        <div class="col-sm-8">
          <%= f.email_field :email, autocomplete: "email", placeholder: "sample@example.com" %>
        </div>
      </div>
      <div class="form-group row offset-md-3">
        <label for="inputPassword3" class="col-sm-4 col-form-label">
          <%= f.label :password,"パスワード" %>
          <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %>文字以上)</em>
          <% end %>
        </label>
        <div class="col-sm-8">
          <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワードを入力" %>
        </div>
      </div>
      <div class="form-group row offset-md-3">
        <label for="inputPassword3" class="col-sm-4 col-form-label"><%= f.label :password_confirmation,"パスワード(確認用)" %></label>
        <div class="col-sm-8">
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>
      </div>
      <div class="form-group row offset-md-3">
        <div class="col-sm-8 text-center">
          <%= f.submit "新規登録", class:"btn btn-success" %>
        </div>
      </div>
    </div>
  <% end %>

  <p class="col offset-md-3">登録済みの方</p>
  <p class="col offset-md-3"><%= link_to "こちら", new_user_session_path %>からログイン</p>
</div>

