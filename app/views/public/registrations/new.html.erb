<div class="container">
  <div class="row">
    <div class="col-dm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>新規登録</h2>

      <%= form_with model: @user, url: user_registration_path do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="field">
        <%= f.label :name, "名前" %><br>
        <%= f.text_field :name %>
        </div>

        <div class="field">
          <%= f.label :email,"メールアドレス" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :password,"パスワード" %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %>文字以上)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation,"パスワード(確認用)" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>

        <div class="actions">
          <%= f.submit "新規登録", class:"btn btn-success" %>
        </div>
      <% end %>

      <p>登録済みの方</p>
      <%= link_to "こちら", new_user_session_path, class:"btn btn-success" %>からログイン
    </div>
  </div>
</div>

