<div class="container">
  <div class="row">
    <!--ジャンルリストの部分テンプレート-->
    <%= render "bygenre", genres: @genres %>

    <div class="col-md-8 mx-auto">
      <h3 class="my-5 text-center">ゲーム一覧</h3>
      <% @games.each do |game| %>
        <div class="d-flex flex-wrap">
          <div class="card" style="width: 18rem;">
            <div class="card-body">
              <h5 class="card-title"><%= game.name %></h5>
              <p class="card-text"><%= game.explanation %></p>
              <div class="d-inline"><%= link_to "詳細へ", game_path(game.id) %></div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>