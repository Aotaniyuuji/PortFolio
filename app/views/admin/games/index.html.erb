<div class="container">
  <div class="row">
    <div class="col mx-auto">
      <!--フラッシュメッセージ-->
      <% if flash[:danger].present? %>
        <div class="alert alert-danger"><button type="button" class="close" data-dismiss="alert">&times;</button>
          <%= flash[:danger] %>
        </div>
      <% end %>
      
      <h3 class="mt-5">登録ゲーム一覧・追加</h3>
      <% if @game.errors.any? %>
        <%= @game.errors.count %>件のエラーが発生しました
        <ul>
          <% @game.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
      <%= form_with url: admin_games_path, model: @game do |f| %>
        <div class="form-group">
          <%= f.label :name, "ゲームタイトル" %>
          <%= f.text_field :name %>
        </div>
        <div class="form-group">
          <%= f.label :genre, "ジャンル" %>
          <%= f.collection_select :genre_id, Genre.all, :id, :name, {prompt: "選択"} %>
        </div>
        <div class="form-group">
          <%= f.label :image, "画像" %>
          <%= f.file_field :image, accept: "image/*" %>
        </div>
        <div class="form-group">
          <%= f.label :explanation, "ゲーム概要" %>
          <%= f.text_area :explanation, rows: '3' %>
        </div>
        <%= f.submit '登録', class:"btn btn-success" %>
      <% end %>


        <table class="table table-inverse table-borderless">
          <thead>
            <tr>
              <th>タイトル</th>
              <th>ジャンル</th>
              <th>概要</th>
              <th></th>
            </tr>
          </thead>
          <% @games.each do |game| %>
          <tbody>
            <tr>
              <td>
                <%= link_to admin_game_path(game.id) do %>
                  <%= game.name %>
                <% end %>
                </td>
              <td><%= game.genre.name %></td>
              <td><%= game.explanation %></td>
              <td><%= link_to '編集する', edit_admin_game_path(game), class: "btn btn-success" %></td>
            </tr>
          </tbody>
          <% end %>
        </table>
    </div>
  </div>
</div>
