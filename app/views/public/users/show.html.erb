<div class="container px-5">
  <div class="row">
    <div class="col mx-auto">
      <h4 class="mt-5">マイページ</h4>
      <table class="table table-hover table-inverse table-bordered">
        <tr>
          <th>名前</th>
          <td><%= @user.name %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= @user.email %></td>
        </tr>
      </table>
      <%= link_to edit_user_path(@user.id) do %>
        <p class="btn btn-success">編集する</p>
      <% end %>
    </div>
  </div>
</div>
