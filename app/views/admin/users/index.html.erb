<div class="container">
  <div class="row">
    <div class="col-md-8 mx-auto">
      <h3 class="mt-5 text-center">ユーザー一覧</h3>
      <table class="table table-hover table-inverse table-borderless">
        <thead>
          <tr>
            <th>名前</th>
            <th>メールアドレス</th>
            <th>会員ステータス</th>
          </tr>
        </thead>
        <% @users.each do |user| %>
          <tbody>
            <tr>
              <td>
                <%= link_to admin_user_path(user), class: 'text-dark text-decoration-none' do %>
                  <%= user.name %>
                <% end %>
              </td>
              <td><%= user.email %></td>
              <td>
                <% if user.is_deleted == false %>
                  <p class="text-success">有効</p>
                <% else %>
                  <p class="text-danger">退会済み</p>
                <% end %>
              </td>
            </tr>
          </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>