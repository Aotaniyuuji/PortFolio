<div class="container">
  <div class="row">
    <div class="col mx-auto">
      <div class="mt-5 text-center">
        <p><%= @game.name %></p>
        <%= @game.explanation %>
      </div>

      <div>
        <%= form_with model: [@game, @review] do |f| %>
          <%= f.label :comment, "レビューコメント" %>
          <%= f.text_area :comment, rows: '3',placeholder: "コメント" %>
          <%= f.submit "送信", class: 'btn btn-primary' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
