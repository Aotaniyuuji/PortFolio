<div class="container">
  <div class="row">
    <!--ジャンルのリスト-->
    <%= render "bygenre", genres: @genres %>

    <div class="col-md-8 mx-auto">
      <h3 class="mt-5 text-center">ゲーム一覧</h3>
      <div class="mt-5 text-center">
        <table class="table table-hover table-inverse table-bordered">
          <thead>
            <tr>
              <th>タイトル</th>
              <th>ジャンル</th>
              <th>概要</th>
            </tr>
          </thead>
          <% @games.each do |game| %>
            <tbody>
              <tr>
                <td>
                  <%= link_to game_path(game.id) do %>
                    <strong class="text-dark"><%= game.name %></strong>
                  <% end %>
                </td>
                <td><%= game.genre.name %></td>
                <td><%= game.explanation %></td>
              </tr>
            </tbody>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</div>