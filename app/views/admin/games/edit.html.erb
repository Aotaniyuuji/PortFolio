<div class="container">
  <div class="row">
    <div class="col-md-10 mx-auto">
      <h3 class="mt-5 text-center">ゲーム情報編集画面</h3>
      <%= flash[:danger] %>
      <%= form_with(model: @game, url: admin_game_path(@game), method: :patch) do |f| %>
        <div class="form-group">
          <%= f.label :name, "ゲームタイトル" %>
          <%= f.text_field :name %>
        </div>
        <div class="form-group">
          <%= f.label :genre, "ゲームジャンル" %>
          <%= f.collection_select :genre_id, Genre.all, :id, :name, {prompt: "選択"} %>
        </div>
        <div class="form-group">
          <%= f.label :image, "画像" %>
          <%= f.file_field :image, accept: "image/*" %>
        </div>
        <div class="form-group">
          <%= f.label :explanation, "ゲーム概要" %>
          <%= f.text_area :explanation, rows: '3' %>
        </div>
        <div class="form-group">
          <%= f.submit "更新する", class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>