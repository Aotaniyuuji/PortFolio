<div class="container">
  <div class="row">
    <div class="col-md-10 mx-auto">

      <h3 class="mt-5 text-center">ユーザー情報編集ページ</h3>
      <div class="mt-5">
      <%= form_with(model: @user, url: user_path(@user.id), method: :patch) do |f| %>
        <div class="form-group text-center">
          <div class="row">
            <%= f.label :name, "名前", class:"col-sm-2 col-form-label" %>
            <div class="col-sm-10">
              <%= f.text_field :name, class:"form-control" %>
            </div>
          </div>
        </div>
        <div class="form-group text-center">
          <div class="row">
            <%= f.label :email, "メールアドレス", class:"col-sm-2 col-form-label" %>
            <div class="col-sm-10">
              <%= f.text_field :email, class:"form-control" %>
            </div>
          </div>
        </div>
        <div class="mt-5 form-group text-center">
          <%= f.submit "変更を保存", class: "btn btn-success" %>
          <%= link_to "退会する", check_path, class:"btn btn-danger" %>
        </div>
      <% end %>
      </div>
    </div>
  </div>
</div>